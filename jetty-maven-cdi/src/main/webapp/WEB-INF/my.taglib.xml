<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
	version="2.0">
	<namespace>http://www.app.fr/html</namespace>
	
	<tag>
		<tag-name>inputText</tag-name>
		<source>tags/input/inputText.xhtml</source>
		<attribute>
			<description>identifiant unique</description>
			<name>id</name>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Icon pour le label (exemple : 'fa-plus')</description>
			<name>faClass</name>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Valeur de l'input text</description>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<description>label de l'input text</description>
			<name>label</name>
			<required>true</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Mettre à yes pour activer upperCase sur l'élément</description>
			<name>upperCase</name>
		</attribute>
		<attribute>
			<description>Class à applique au composant html label de l'input</description>
			<name>styleClassLabel</name>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Class à applique au composant html input</description>
			<name>styleClassInput</name>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Class à applique au composant html message de l'input</description>
			<name>styleClassMessage</name>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>La velur doit être unique, true pour oui et false pour non. par défaut false.</description>
			<name>uniqueText</name>
			<type>java.lang.Boolean</type>
		</attribute>
		<attribute>
			<description>lier le composant au back-end bean</description>
			<name>bindingInput</name>
		</attribute>
	</tag>
	
	<tag>
		<tag-name>datePiker</tag-name>
		<source>tags/input/datePiker.xhtml</source>
		<attribute>
			<description>identifiant unique dans le form</description>
			<name>id</name>
		</attribute>
		<attribute>
			<description>Valeur de l'input text</description>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<description>label de l'input text</description>
			<name>label</name>
			<required>true</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Afficher du composant seulement si condition vrai (par défaut vrai)</description>
			<name>rendered</name>
			<type>java.lang.Boolean</type>
		</attribute>
	</tag>
	
	<tag>
		<tag-name>selectOneItem</tag-name>
		<source>composants/select/selectOneItem.xhtml</source>
		<attribute>
			<description>identifiant unique dans le form</description>
			<name>id</name>
		</attribute>
		<attribute>
			<description>Valeur du selectOneItem</description>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<description>Items disponibles</description>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<description>label de l'input text</description>
			<name>label</name>
			<required>true</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description>Afficher du composant seulement si condition vrai (par défaut vrai)</description>
			<name>rendered</name>
			<type>java.lang.Boolean</type>
		</attribute>
	</tag>
	
	
	
	<tag>
		<tag-name>buttonAdd</tag-name>
		<source>tags/button/insert/buttonAdd.xhtml</source>
		<attribute>
			<description>identifiant unique dans le form</description>
			<name>id</name>
			<required>true</required>
		</attribute>
	</tag>
	<tag>
		<tag-name>buttonValidateAdd</tag-name>
		<source>composants/button/insert/buttonValidateAdd.xhtml</source>
		<attribute>
			<description>identifiant unique dans le form</description>
			<name>id</name>
		</attribute>
	</tag>
	
	
	
	<tag>
		<tag-name>dataTable</tag-name>
		<source>tags/data/dataTable.xhtml</source>
		<attribute>
			<description>identifiant unique dans le form</description>
			<name>id</name>
			<required>true</required>
		</attribute>
	</tag>
	
	
	
	

</facelet-taglib>